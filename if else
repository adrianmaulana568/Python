#latihan 1
i_angka = int(input("Masukan Angka: "))
if (i_angka > 10):
    print("Angka yang Anda masukkan lebih besar dari 10.")
else:
    print("Angka yang Anda masukkan 10 atau kurang.")

# Latihan 2
i_angka2 = int(input("Masukan Angka: "))
if i_angka2 > 0:
    print("Angka Tersebut Positif")
elif i_angka2 < 0:
    print("Angka Tersebut Negatif")
else: 
    print("Angka Tersebut Hanya NOL")

# Latihan 3
i_total_pembelanjaan = int(input("Masukan Total Pembelajaan: "))
if i_total_pembelanjaan > 100000:
    diskon = i_total_pembelanjaan * 0.10
    harga_diskon = i_total_pembelanjaan - diskon
    print("Total Pembayaran: ", harga_diskon)
else: 
    print("Tidak ada diskon -__-")


# Latihan 4
i_nilai = int(input("Masukan Nilai anda: "))
if i_nilai > 100:
 print("Value Limited")
elif i_nilai > 90:
 print("Grade A")
elif i_nilai > 80:
 print("Grade B")
elif i_nilai > 70:
 print("Grade C")
elif i_nilai > 60:
 print("Grade D")
elif i_nilai > 0:
 print("Grade E")
elif i_nilai < 0:
 print("Nilai tidak ada")
